{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "plugins": [
      "./packages/volar/dist/index"
    ]
  },
  "include": [
    "*.ts",
    "*.mts",
    "*.cts",
    "*.d.ts",
    "apps",
    "packages",
    "templates",
    "@weapp-core",
    "website",
    "scripts",
    "e2e",
    "docs",
    "assets"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/dist",
    "**/miniprogram_dist",
    "**/.turbo",
    "**/.cache"
  ]
}
