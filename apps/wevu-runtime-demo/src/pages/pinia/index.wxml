<view class="page">
  <view class="card">
    <view class="card-header">
      <text class="card-title">Pinia 计数器</text>
      <text class="card-meta">double: {{ double }}</text>
    </view>
    <text class="counter-value">{{ count }}</text>
    <view class="counter-actions">
      <button size="mini" bindtap="dec">-</button>
      <button size="mini" type="primary" bindtap="inc">+</button>
      <button size="mini" class="ghost" bindtap="reset">重置</button>
    </view>
  </view>
</view>

