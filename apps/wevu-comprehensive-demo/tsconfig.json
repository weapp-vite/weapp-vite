{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": ["miniprogram-api-typings"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "plugins": [
      "weapp-vite/volar"
    ]
  },
  "include": ["src/**/*", "vite-env.d.ts", "components.d.ts", "typed-components.d.ts"],
  "exclude": ["node_modules", ".wevu"]
}
