{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@weapp-vite/web": [
        "../../packages/web/src/index.ts"
      ]
    },
    "types": [
      "miniprogram-api-typings",
      "vite/client"
    ],
    "strict": true
  },
  "vueCompilerOptions": {
    "plugins": [
      "weapp-vite/volar"
    ]
  },
  "include": [
    "src",
    "vite.config.ts",
    "typed-components.d.ts"
  ]
}
