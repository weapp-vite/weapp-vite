<view class="platform-wrapper {{platformClass}} {{platformWrapperAccent}}">
  <view class="platform-banner platform-banner--web" wx:if="{{isWeb}}">
    {{platformBanner}}
  </view>
  <view class="platform-banner platform-banner--mini" wx:if="{{isMiniProgram}}">
    {{platformBanner}}
  </view>
  <view class="page-content">
    <view class="hero">
      <view class="hero-content">
        <image class="hero-logo" src="/logo.png" />
        <view class="hero-title" bind:tap="onClick">Hello World From weapp-vite!</view>
        <view class="hero-subtitle">当前平台：{{platformDisplayName}}</view>
      </view>
    </view>
    <view class="platform-badge">
      {{platformBadge}}
    </view>
    <HelloWorld
      title="{{hello.title}}"
      description="{{hello.description}}"
      docs="{{hello.docs}}"
      links="{{hello.links}}"
    />
    <view class="platform-highlight" wx:if="{{platformFeature}}">
      {{platformFeature}}
    </view>
    <view class="platform-examples" wx:if="{{platformExamples.length}}">
      <view class="platform-examples__title">编译到 {{platformDisplayName}} 提示：</view>
      <view class="platform-examples__list">
        <view class="platform-examples__item" wx:for="{{platformExamples}}" wx:key="index">
          <text class="platform-examples__dot">•</text>
          <text class="platform-examples__text">{{item}}</text>
        </view>
      </view>
    </view>
    <view class="nav-actions">
      <button type="primary" bindtap="gotoAbout">{{platformCta}}</button>
      <button type="default" bindtap="gotoInteractive">互动场景演示</button>
      <button
        class="nav-actions__docs"
        type="default"
        wx:if="{{platformDocLink}}"
        bindtap="openPlatformDocs"
      >
        查看 {{platformDocsLabel}}
      </button>
    </view>
  </view>
</view>
