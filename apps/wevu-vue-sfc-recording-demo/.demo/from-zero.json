{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "wevu from zero typing demo",
  "description": "从 0 开始清空 index.vue 并逐字输入代码，用于录屏测试。",
  "version": 3,
  "scenes": [
    {
      "title": "Prepare Empty File",
      "description": "打开并清空 src/pages/index/index.vue",
      "moves": [
        {
          "action": "open",
          "path": "src/pages/index/index.vue"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "editor.action.selectAll"
        },
        {
          "action": "pressDelete"
        },
        {
          "action": "save"
        },
        {
          "action": "waitForTimeout",
          "timeout": 300
        }
      ]
    },
    {
      "title": "Type Code From Zero",
      "description": "字符级输入完整页面代码",
      "moves": [
        {
          "action": "insert",
          "path": "src/pages/index/index.vue",
          "position": "start",
          "contentPath": ".demo/content/index.from-zero.vue",
          "insertTypingMode": "character-by-character",
          "insertTypingSpeed": 35
        },
        {
          "action": "save"
        }
      ]
    },
    {
      "title": "Optional Manual IntelliSense",
      "description": "可选：手动演示一次智能提示",
      "moves": [
        {
          "action": "showInfoMessage",
          "message": "可选：现在手动在 import 行输入 onS，再按 Ctrl+Space 选择 onShow，演示补全。完成后按右方向继续。"
        },
        {
          "action": "waitForInput"
        }
      ]
    }
  ]
}
