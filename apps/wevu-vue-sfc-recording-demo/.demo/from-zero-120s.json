{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "wevu from zero typing demo (120s)",
  "description": "120 秒讲解版：更慢速打字，留出更完整的智能提示和讲解窗口。",
  "version": 3,
  "scenes": [
    {
      "title": "Prepare Empty File",
      "description": "打开并清空 src/pages/index/index.vue",
      "moves": [
        {
          "action": "open",
          "path": "src/pages/index/index.vue"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "editor.action.selectAll"
        },
        {
          "action": "pressDelete"
        },
        {
          "action": "save"
        },
        {
          "action": "waitForTimeout",
          "timeout": 1000
        }
      ]
    },
    {
      "title": "Type Code From Zero (120s Pace)",
      "description": "按字符输入完整页面代码（约 85~100 秒）",
      "moves": [
        {
          "action": "insert",
          "path": "src/pages/index/index.vue",
          "position": "start",
          "contentPath": ".demo/content/index.from-zero.vue",
          "insertTypingMode": "character-by-character",
          "insertTypingSpeed": 60
        },
        {
          "action": "save"
        },
        {
          "action": "waitForTimeout",
          "timeout": 1000
        }
      ]
    },
    {
      "title": "Manual IntelliSense Window",
      "description": "预留较长时间手动演示补全、保存和口播讲解",
      "moves": [
        {
          "action": "showInfoMessage",
          "message": "120 秒版：现在手动输入 onS -> Ctrl+Space -> 选 onShow -> 保存。你可以边操作边讲解。"
        },
        {
          "action": "waitForTimeout",
          "timeout": 18000
        },
        {
          "action": "showInfoMessage",
          "message": "若要继续补充讲解可先不结束；准备好后按右方向结束。"
        },
        {
          "action": "waitForInput"
        }
      ]
    }
  ]
}
