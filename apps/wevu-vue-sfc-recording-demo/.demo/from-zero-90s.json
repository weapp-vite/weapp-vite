{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "wevu from zero typing demo (90s)",
  "description": "90 秒节奏版：从空文件到完整页面，并预留智能提示演示时间。",
  "version": 3,
  "scenes": [
    {
      "title": "Prepare Empty File",
      "description": "打开并清空 src/pages/index/index.vue",
      "moves": [
        {
          "action": "open",
          "path": "src/pages/index/index.vue"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "editor.action.selectAll"
        },
        {
          "action": "pressDelete"
        },
        {
          "action": "save"
        },
        {
          "action": "waitForTimeout",
          "timeout": 800
        }
      ]
    },
    {
      "title": "Type Code From Zero (90s Pace)",
      "description": "按字符输入完整页面代码（约 65~75 秒）",
      "moves": [
        {
          "action": "insert",
          "path": "src/pages/index/index.vue",
          "position": "start",
          "contentPath": ".demo/content/index.from-zero.vue",
          "insertTypingMode": "character-by-character",
          "insertTypingSpeed": 45
        },
        {
          "action": "save"
        },
        {
          "action": "waitForTimeout",
          "timeout": 500
        }
      ]
    },
    {
      "title": "Manual IntelliSense Window",
      "description": "预留时间手动演示补全和保存热更新",
      "moves": [
        {
          "action": "showInfoMessage",
          "message": "现在手动输入 onS -> Ctrl+Space -> 选择 onShow -> 保存。建议控制在 10~15 秒内。"
        },
        {
          "action": "waitForTimeout",
          "timeout": 12000
        },
        {
          "action": "showInfoMessage",
          "message": "需要重录可按左方向回上一段；完成后按右方向结束。"
        },
        {
          "action": "waitForInput"
        }
      ]
    }
  ]
}
