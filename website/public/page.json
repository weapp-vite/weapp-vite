{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": {},
  "description": "页面配置, 支持对单个页面进行配置，可以在页面对应的 .json 文件来对本页面的表现进行配置",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "backgroundColor": {
      "default": "#ffffff",
      "type": "string"
    },
    "backgroundColorBottom": {
      "default": "#ffffff",
      "type": "string"
    },
    "backgroundColorContent": {
      "default": "#RRGGBBAA",
      "type": "string"
    },
    "backgroundColorTop": {
      "default": "#ffffff",
      "type": "string"
    },
    "backgroundTextStyle": {
      "default": "dark",
      "enum": [
        "dark",
        "light"
      ],
      "type": "string"
    },
    "componentFramework": {
      "type": "string"
    },
    "componentPlaceholder": {
      "additionalProperties": {},
      "properties": {},
      "type": "object"
    },
    "disableScroll": {
      "default": false,
      "type": "boolean"
    },
    "enablePassiveEvent": {
      "anyOf": [
        {
          "additionalProperties": {},
          "properties": {},
          "type": "object"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "enablePullDownRefresh": {
      "default": false,
      "type": "boolean"
    },
    "handleWebviewPreload": {
      "default": "static",
      "enum": [
        "static",
        "manual",
        "auto"
      ],
      "type": "string"
    },
    "homeButton": {
      "default": false,
      "type": "boolean"
    },
    "initialRenderingCache": {
      "enum": [
        "static",
        "dynamic"
      ],
      "type": "string"
    },
    "navigationBarBackgroundColor": {
      "default": "#000000",
      "type": "string"
    },
    "navigationBarTextStyle": {
      "default": "white",
      "type": "string"
    },
    "navigationBarTitleText": {
      "type": "string"
    },
    "navigationStyle": {
      "default": "default",
      "enum": [
        "default",
        "custom"
      ],
      "type": "string"
    },
    "onReachBottomDistance": {
      "default": 50,
      "type": "number"
    },
    "pageOrientation": {
      "default": "portrait",
      "enum": [
        "portrait",
        "auto",
        "landscape"
      ],
      "type": "string"
    },
    "renderer": {
      "default": "webview",
      "enum": [
        "webview",
        "skyline"
      ],
      "type": "string"
    },
    "rendererOptions": {
      "additionalProperties": {},
      "properties": {
        "skyline": {
          "additionalProperties": {},
          "properties": {
            "defaultContentBox": {
              "default": false,
              "type": "boolean"
            },
            "defaultDisplayBlock": {
              "default": false,
              "type": "boolean"
            },
            "disableABTest": {
              "default": false,
              "type": "boolean"
            }
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "restartStrategy": {
      "default": "homePage",
      "enum": [
        "homePage",
        "homePageAndLatestPage"
      ],
      "type": "string"
    },
    "singlePage": {
      "additionalProperties": {},
      "properties": {},
      "type": "object"
    },
    "style": {
      "type": "string"
    },
    "styleIsolation": {
      "enum": [
        "page-isolated",
        "page-apply-shared",
        "page-shared"
      ],
      "type": "string"
    },
    "usingComponents": {
      "additionalProperties": {
        "type": "string"
      },
      "propertyNames": {
        "type": "string"
      },
      "type": "object"
    },
    "visualEffectInBackground": {
      "default": "none",
      "enum": [
        "none",
        "hidden"
      ],
      "type": "string"
    }
  },
  "type": "object"
}
