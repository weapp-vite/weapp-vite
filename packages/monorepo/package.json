{
  "name": "@icebreakers/monorepo",
  "type": "module",
  "version": "0.4.4",
  "description": "icebreaker's monorepo config generator",
  "author": "ice breaker <1324318532@qq.com>",
  "license": "MIT",
  "homepage": "https://monorepo.icebreaker.top",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/monorepo-template.git",
    "directory": "packages/monorepo"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/monorepo-template/issues"
  },
  "keywords": [
    "monorepo",
    "icebreaker"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts"
  },
  "bin": "dev/bin.js",
  "files": [
    "assets",
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch --sourcemap",
    "build": "tsup",
    "test": "vitest run",
    "test:dev": "vitest",
    "release": "pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublish": "tsx scripts/prepublish.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": "bin/copy.js"
  },
  "dependencies": {
    "@inquirer/checkbox": "^3.0.1",
    "@inquirer/confirm": "^4.0.1",
    "commander": "^12.1.0",
    "consola": "^3.2.3",
    "fs-extra": "^11.2.0",
    "git-url-parse": "^15.0.0",
    "klaw": "^4.1.0",
    "p-queue": "^8.0.1",
    "pathe": "^1.1.2",
    "picocolors": "^1.1.0",
    "simple-git": "^3.26.0"
  },
  "devDependencies": {
    "@types/git-url-parse": "^9.0.3"
  }
}
