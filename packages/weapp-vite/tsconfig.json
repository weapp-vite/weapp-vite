{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vitest/globals",
      "vite/client",
      "vue/jsx"
    ],
    "allowArbitraryExtensions": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test",
    "client.d.ts"
  ],
  "exclude": [
    "coverage",
    "dist",
    "node_modules"
  ]
}
