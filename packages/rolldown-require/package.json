{
  "name": "rolldown-require",
  "type": "module",
  "version": "1.0.2",
  "description": "bundle and require a file using rolldown!",
  "author": "ice breaker <1324318532@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weapp-vite/weapp-vite.git",
    "directory": "packages/rolldown-require"
  },
  "bugs": {
    "url": "https://github.com/weapp-vite/weapp-vite/issues"
  },
  "keywords": [
    "require",
    "rolldown",
    "runtime",
    "node",
    "cjs",
    "commonjs",
    "esm",
    "typescript",
    "bundle"
  ],
  "imports": {
    "#module-sync-enabled": {
      "module-sync": "./misc/true.js",
      "default": "./misc/false.js"
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "misc"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "dev": "unbuild --stub",
    "build:watch": "tsup --watch --sourcemap",
    "build": "tsup",
    "test": "vitest run",
    "test:dev": "vitest",
    "release": "pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs"
      }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "peerDependencies": {
    "rolldown": "*"
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.1.4",
    "get-tsconfig": "^4.10.1",
    "mlly": "^1.7.4",
    "resolve.exports": "^2.0.3"
  },
  "devDependencies": {
    "@types/pnpapi": "^0.0.5"
  }
}
